{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "awslambda": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ],
    "import/no-unresolved": ["error", { "ignore": ["^@aws-sdk/"] }],
    "max-len": ["warn", { "code": 120 }],
    "semi": ["error", "always"]
  }
}
